{% if show_path and path_array|length > 2 %}
    <div class="breadcrumb-wrapper" aria-label="breadcrumb">
        <a href="{{ ibexa_path(ibexa.rootLocation) }}" class="breadcrumb-item">
            <i class="fas fa-home"></i>
            <span>{{ ibexa.rootLocation.content.name }}</span>
        </a>
        {% for path_item in path_array|slice(1, path_array|length - 1) %}
            {% if path_item.url == false %}
                <span class="breadcrumb-item breadcrumb-item--no-link"><span>{{ path_item.text }}</span></span>
            {% else %}
                <a class="breadcrumb-item breadcrumb-item--link" href="{{ path_item.url }}"><span>{{ path_item.text }}</span></a>
            {% endif %}
        {% endfor %}
    </div>
{% endif %}
