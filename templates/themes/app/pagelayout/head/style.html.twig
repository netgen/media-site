<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap">

{% for href in encore_entry_css_files('index', 'app') %}
    <link rel="stylesheet" type="text/css" href="{{ href }}"></link>
{% endfor %}

{% for href in encore_entry_css_files('index-noncritical', 'app') %}
    <link rel="prefetch" as="style" type="text/css" href="{{ href }}" onload="this.onload=null;this.rel='stylesheet';"></link>
{% endfor %}

{% for href in encore_entry_css_files('app', 'ngsb') %}
    <link rel="stylesheet" type="text/css" href="{{ href }}">
{% endfor %}

<link rel="preload" as="style" type="text/css" href="{{ asset('style.css', 'nglayouts_' ~ (nglayouts.debug ? 'dev_' : '') ~ 'css') }}" onload="this.onload=null;this.rel='stylesheet';"/>
