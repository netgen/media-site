{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% block content %}
<article class="view-component view-component-lead lead-style-2">
    <div class="row">
        <div class="col-lg-5">
            <header class="article-header">
                {% if not content.fields.eyebrow_title.empty %}
                    <h4 class="eyebrow-title">
                        {{ ng_render_field(content.fields.eyebrow_title) }}
                    </h4>
                {% endif %}

                {% if not content.fields.title.empty %}
                    <h2 class="title">
                        {{ ng_render_field(content.fields.title)}}
                    </h2>
                {% endif %}
            </header>
            {% if not content.fields.description.empty %}
                <div class="article-info">
                    <div class="short">
                        {{ ng_render_field(content.fields.description) }}
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col-lg-5 offset-lg-1 mt-5 mt-lg-0">
            {% if not content.fields.link_1.empty %}
                {% if content.fields.link_1.value.isTargetEmbed %}
                    <div class="embedded-form">
                {% else %}
                    <div class="actions">
                {% endif %}
                    {{ ng_render_field(
                        content.fields.link_1, {
                            parameters: {
                                css_class: 'btn btn-primary'
                            }
                        }
                    ) }}
                </div>
            {% endif %}
        </div>
    </div>
</article>
{% endblock %}
