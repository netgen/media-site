{% import "@ibexadesign/content/macros/links.html.twig" as links %}

{% block content %}
<article class="view-type view-type-{{ view_type }} ng-banner vl2">
    <figure class="image">
        {{ links.image_link(content, 'image', 'i480') }}
    </figure>
    <header class="article-header">
        <h2 class="title">
            {{ links.content_link(content, content.fields.title.value.text) }}
        </h2>
    </header>

</article>
{% endblock %}
