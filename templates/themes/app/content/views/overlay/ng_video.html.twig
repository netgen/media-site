{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@ibexadesign/content/macros/content_fields.html.twig' as content_fields %}
{% import '@ibexadesign/content/macros/video.html.twig' as video %}
{% import '@NetgenToolbar/macros.html.twig' as toolbar_macros %}

{% if not content.fields.video_file.empty or not content.fields.video_identifier.empty %}
    <article {{ toolbar_macros.item_params(content, location) }} class="view-type view-type-{{ view_type }} ng-video vl2">
        <i class="icon-play article-icon" aria-hidden="true"></i>
        <figure class="image">
            {{ video.poster(content, location, 'i480') }}
        </figure>
        <header class="article-header">
            <h3 class="title"><a href="{{ ibexa_path(location) }}">{{ content_fields.title(content) }}</a></h3>
            <div class="info">
                {% if not content.fields.sponsored_content_disclosure.empty %}
                    <span class="sponsored-tag">{{ 'ngsite.layout.sponsored'|trans }}</span>
                {% elseif not content.fields.main_topic.empty %}
                    <span>{{ content.fields.main_topic.value.tags[0].keyword }}</span>
                {% endif %}
            </div>
        </header>
    </article>
{% endif %}
