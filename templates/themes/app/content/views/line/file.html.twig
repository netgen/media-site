{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@NetgenToolbar/macros.html.twig' as toolbar_macros %}

<article {{ toolbar_macros.item_params(content, location) }} class="view-type view-type-{{ view_type }} file vl4">
    <div class="article-content">
        <header class="article-header">
            <h2 class="title">
                <a href="{{ ibexa_path(location) }}">
                    {{ content.fields.name.value.text }}
                </a>
            </h2>
        </header>
    </div>
</article>
