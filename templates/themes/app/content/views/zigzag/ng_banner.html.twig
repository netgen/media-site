{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import "@ibexadesign/content/macros/links.html.twig" as links %}
{% import '@NetgenToolbar/macros.html.twig' as toolbar_macros %}

<article {{ toolbar_macros.item_params(content, location) }} class="view-type view-type-{{ view_type }} ng-banner vl9">
    {% if not content.fields.image.empty %}
        <figure class="image">
            {{ links.image_link(content, 'image', 'i770') }}
        </figure>
    {% endif %}

    <div class="article-content">
        <header class="article-header">
            {% if not content.fields.eyebrow_title.empty %}
                <span class="eyebrow-title">{{ content.fields.eyebrow_title.value.text }}</span>
            {% endif %}
            <h3 class="title">
                {{ links.content_link(content, content.fields.title.value.text) }}
            </h3>
        </header>
        <div class="short">
            {{ ng_render_field(content.fields.description) }}
        </div>
    </div>

</article>
