{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

{% import '@ibexadesign/content/macros/content_fields.html.twig' as content_fields %}
{% import '@ibexadesign/content/macros/slide.html.twig' as slide %}
{% import '@NetgenToolbar/macros.html.twig' as toolbar_macros %}

<div {{ toolbar_macros.item_params(content, location) }} class="view-type view-type-{{ view_type }} ng-news vl3 {% if show_details_on_hover %}show_details_on_hover{% endif %}">
    {% if image_type == 'main' %}
        {{ slide.image(content, 'image', 'i1320', true) }}

        {% if show_details %}
            <div class="info">
                <div class="date">
                    {% include '@ibexadesign/content/parts/time.html.twig' %}
                </div>
                <h2 class="title"><a href={{ ibexa_path(location) }}>{{ content_fields.title(content) }}</a></h2>
            </div>
        {% endif %}
    {% elseif image_type == 'thumb' %}
        {{ slide.image(content, 'image', 'i320') }}
    {% endif %}
</div>
