{# content \Netgen\IbexaSiteApi\API\Values\Content #}
{# location \Netgen\IbexaSiteApi\API\Values\Location #}

<article data-item="true" data-content-id="{{ content.id }}" data-location-id="{{ location.id }}" class="view-type view-type-{{ view_type }} ng-frontpage vl1">
    <header class="article-header">
        <h2 class="title"><a href="{{ ibexa_path(location) }}">{{ ng_render_field(content.fields.title) }}</a></h2>
    </header>
</article>
