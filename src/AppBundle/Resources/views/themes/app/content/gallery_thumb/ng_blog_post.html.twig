{# content \Netgen\EzPlatformSiteApi\API\Values\Content #}
{# location \Netgen\EzPlatformSiteApi\API\Values\Location #}

{% import '@ezdesign/parts/content_fields.html.twig' as content_fields %}
{% import '@ezdesign/parts/slide.html.twig' as slide %}

<div class="view-type view-type-{{ view_type }} ng-blog-post vl3  {% if show_details_on_hover %}show_details_on_hover{% endif %}">
    {% if image_type == 'main' %}
        {{ slide.image(content, 'image', 'i1200', true) }}

        {% if show_details %}
            <div class="info">
                <h2 class="title"><a href={{ path(location) }}>{{ content_fields.title(content) }}</a></h2>

                <div class="date">
                    {% include '@ezdesign/parts/author.html.twig' with {'in_bivt': true} %}
                    {% include '@ezdesign/parts/time.html.twig' with {'in_bivt_thumb': true} %}
                </div>
            </div>
        {% endif %}
    {% elseif image_type == 'thumb' %}
        {{ slide.image(content, 'image', 'i320') }}
    {% endif %}
</div>
