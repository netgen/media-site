        <div class="container">
            <h1 class="full-page-title">{{ 'ngsite.user.activate.sent.title'|trans }}</h1>
        </div>
    </header>

    <div class="full-form-content">
        <div class="container">
            <div class="full-form-response">
                <p>{{ 'ngsite.user.activate.sent.text'|trans({'%link%': path('ngsite_resend_activation_mail')})|raw }}</p>
            </div>
        </div>
    </div>
{% endblock %}
