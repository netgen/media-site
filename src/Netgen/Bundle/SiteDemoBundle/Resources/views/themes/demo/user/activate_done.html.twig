{% extends ngbm.layoutTemplate %}

{% trans_default_domain "ngsite_user" %}

{% block content %}
    <div class="page-header">
        <h1>{{ 'ngsite.user.activate.done.title'|trans }}</h1>
    </div>

    {% if error is defined %}
        {% if error == 'hash_expired' %}
            <div class="alert alert-danger">
                {{ 'ngsite.user.activate.done.error.hash_expired'|trans({'%link%': path('ngsite_resend_activation_mail')})|raw }}
            </div>
        {% else %}
            <div class="alert alert-danger">{{ 'ngsite.user.activate.done.error.other'|trans }}</div>
        {% endif %}
    {% else %}
        <p>{{ "ngsite.user.activate.done.text"|trans({'%link%': path('login')})|raw }}</p>
    {% endif %}
{% endblock %}
