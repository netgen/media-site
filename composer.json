{
    "name": "netgen/media-site",
    "description": "Netgen Media Site (Powered by Netgen Layouts & eZ Platform)",
    "homepage": "https://netgen.io",
    "license": "GPL-2.0-only",
    "type": "project",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        },
        {
            "name": "eZ dev team & eZ Community",
            "homepage": "https://github.com/ezsystems/ezplatform/contributors"
        }
    ],
    "autoload": {
        "psr-0": { "": "src/" },
        "classmap": [ "app/AppKernel.php", "app/AppCache.php" ]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php", "dev-bootstrap.php" ]
    },
    "require": {
        "php": "^7.4",
        "ext-gd": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-xsl": "*",
        "ext-xml": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "doctrine/doctrine-bundle": "^1.9.1",
        "doctrine/orm": "^2.6.3",
        "ezsystems/doctrine-dbal-schema": "^0.1.4",
        "ezsystems/ez-support-tools": "^1.0.10",
        "ezsystems/ezplatform-admin-ui": "~1.5.19",
        "ezsystems/ezplatform-admin-ui-assets": "^4.2.1",
        "ezsystems/ezplatform-admin-ui-modules": "~1.5.11",
        "ezsystems/ezplatform-core": "^1.0.4",
        "ezsystems/ezplatform-cron": "^2.0.4",
        "ezsystems/ezplatform-design-engine": "^2.0.0",
        "ezsystems/ezplatform-graphql": "^1.0.8",
        "ezsystems/ezplatform-http-cache": "^1.0.2",
        "ezsystems/ezplatform-matrix-fieldtype": "^1.0.7",
        "ezsystems/ezplatform-richtext": "^1.1.10",
        "ezsystems/ezplatform-solr-search-engine": "^1.7.7",
        "ezsystems/ezplatform-standard-design": "^0.2.2",
        "ezsystems/ezplatform-user": "^1.0.7",
        "ezsystems/ezpublish-kernel": "~7.5.23",
        "ezsystems/repository-forms": "~2.5.9",
        "ezsystems/symfony-tools": "^1.1.2",
        "friendsofsymfony/jsrouting-bundle": "^1.6.3",
        "incenteev/composer-parameter-handler": "^2.1.3",
        "knplabs/knp-menu-bundle": "^2.2.1 || ^3.0",
        "laminas/laminas-zendframework-bridge": "^1.1",
        "monolog/monolog": "^1.25.2",
        "overblog/graphql-bundle": "^0.11.11",
        "scssphp/scssphp": "~1.0",
        "sensio/distribution-bundle": "^5.0.23",
        "symfony/monolog-bundle": "^3.3.1",
        "symfony/swiftmailer-bundle": "^3.2.4",
        "symfony/symfony": "^3.4.47",
        "twig/extensions": "^1.5.3",
        "white-october/pagerfanta-bundle": "^1.2.2",
        "willdurand/js-translation-bundle": "^2.6.6",

        "ezsystems/ezplatform-xmltext-fieldtype": "^1.9.4",
        "ezsystems/ezpublish-legacy": ">=2019.03.6",

        "guzzlehttp/psr7": "^1.8.2",
        "php-http/curl-client": "^1.7.1",
        "php-http/httplug-bundle": "^1.15.2",
        "sentry/sentry-symfony": "^3.5",
        "symfony/webpack-encore-bundle": "^1.8",

        "netgen/media-site-data": "~1.8.0",
        "netgen/site-bundle": "~1.6.1",
        "netgen/site-generator-bundle": "~1.5.0",
        "netgen/site-legacy-bundle": "^1.4",
        "netgen/site-installer-bundle": "^1.3",
        "netgen/information-collection-bundle": "^1.9",
        "netgen/remote-media-bundle": "^2.0@alpha",
        "netgen/ezplatform-site-api": "^3.7",
        "netgen/ezplatform-search-extra": "^1.15",
        "netgen/admin-ui-bundle": "^2.8",
        "primedigital/translations-bundle": "^1.0",

        "netgen/layouts-standard": "~1.3.0",
        "netgen/layouts-ezplatform": "~1.3.0",
        "netgen/layouts-ezplatform-site-api": "~1.3.0",
        "netgen/layouts-ezplatform-relation-list-query": "^1.3",
        "netgen/layouts-ezplatform-tags-query": "^1.3",
        "netgen/layouts-remote-media": "^1.1"
    },
    "require-dev": {
        "behat/behat": "^3.7.0",
        "behat/mink-extension": "^2.3.1",
        "behat/mink-goutte-driver": "^1.2.1",
        "behat/mink-selenium2-driver": "^1.4.0",
        "behat/symfony2-extension": "^2.1.5",
        "bex/behat-screenshot": "^1.2.7",
        "ezsystems/allure-behat": "^2.0.3",
        "ezsystems/allure-php-api": "^2.0.1",
        "ezsystems/behat-screenshot-image-driver-cloudinary": "^1.1.1",
        "ezsystems/behatbundle": "^7.0.8",
        "liuggio/fastest": "~1.6.0",
        "overblog/graphiql-bundle": "^0.1.2",
        "phpunit/phpunit": "^8.5 || ^9.1",
        "sensio/generator-bundle": "^3.1.7",
        "symfony/phpunit-bridge": "^5.2",
        "snc/redis-bundle": "^3.3",
        "predis/predis": "^1.1.7",
        "deployer/recipes": "^6.2",

        "netgen/git-hooks": "^2.2",
        "phpstan/phpstan": "^1.8",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-symfony": "^1.2",
        "phpstan/phpstan-doctrine": "^1.3"
    },
    "conflict": {
        "doctrine/dbal": "2.7.0",
        "doctrine/persistence": "1.3.2",
        "twig/twig": "2.6.1"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "eZ\\Bundle\\EzPublishLegacyBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "eZ\\Bundle\\EzPublishLegacyBundle\\Composer\\ScriptHandler::installLegacyBundlesExtensions",
            "Netgen\\Bundle\\SiteBundle\\Composer\\ScriptHandler::installProjectSymlinks",
            "Netgen\\Bundle\\SiteLegacyBundle\\Composer\\ScriptHandler::installLegacySymlinks",
            "eZ\\Bundle\\EzPublishLegacyBundle\\Composer\\ScriptHandler::generateAutoloads"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "ezplatform-install": [
            "@php bin/console ezplatform:install netgen-media"
        ],
        "ezplatform-assets": [
            "@php bin/console bazinga:js-translation:dump web/assets --merge-domains",
            "yarn ezplatform"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist",
        "allow-plugins": {
            "ezsystems/ezpublish-legacy-installer": true,
            "netgen/git-hooks": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-bin-dir": "bin",
        "symfony-var-dir": "var",
        "symfony-web-dir": "web",
        "symfony-tests-dir": "tests",
        "ezpublish-legacy-dir": "ezpublish_legacy",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "keep-outdated": true,
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "1.11.x-dev"
        }
    }
}
